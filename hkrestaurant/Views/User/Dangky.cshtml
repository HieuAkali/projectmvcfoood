
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_detail.cshtml";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
<form class="modal-content" >
    <h1>Welcome To HK Restaurant</h1>
    <p>Please fill in this form to create an account.</p>
    <hr>
    <input style="width: 100%; height: 40px; margin: 5px 0 22px 0; border: none; background: #f1f1f1;" type="text" placeholder="Enter account "  @Html.TextBox("kh_taikhoan")  @ViewData["Loi1"] <br />
    <input style="width: 100%; height: 40px; margin: 5px 0 22px 0; border: none; background: #f1f1f1;" type="password" placeholder="Enter password"  @Html.TextBox("kh_matkhau")   @ViewData["Loi2"] <br />
    <input style="width: 100%; height: 40px; margin: 5px 0 22px 0; border: none; background: #f1f1f1;" type="text" placeholder="Enter fullname " @Html.TextBox("kh_tendaydu")  @ViewData["Loi3"] <br />
    <input style="width: 100%; height: 40px; margin: 5px 0 22px 0; border: none; background: #f1f1f1;" type="text" placeholder="Enter your phone"@Html.TextBox("kh_sdt")       @ViewData["Loi4"] <br />
    <input style="width: 100%; height: 40px; margin: 5px 0 22px 0; border: none; background: #f1f1f1;" type="text" placeholder="Enter your mail" @Html.TextBox("kh_email")     @ViewData["Loi5"] <br />

    <label>
        <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px">
        Remember me
    </label>

    <p>
        By creating an account you agree to our <a href="#" style="color:dodgerblue">
            Terms &
            Privacy
        </a>.
    </p>

    <div class="clearfix" style="padding:20px;">
        <button type="button" onclick="document.getElementById('id01').style.display='none'"
                class="btn-danger">
            Cancel
        </button>
        <button type="submit" class="btn-danger">Sign Up</button>
    </div>
</form>
}

